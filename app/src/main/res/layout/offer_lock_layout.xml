<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

     <LinearLayout
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="@drawable/left_strap"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="OFFER LOCK ID"
                android:textColor="@color/textdark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="0.02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textdark"
                android:textStyle="bold"
                android:text=":"/>

            <TextView
                android:layout_weight="0.6"
                android:id="@+id/offer_lock_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/textdark"
                tools:text="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Valid Date"
                android:textColor="@color/textdark"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="0.02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textdark"
                android:textStyle="bold"
                android:text=":"/>

            <TextView
                android:layout_weight="0.6"
                android:id="@+id/valid_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/textdark"
                tools:text="28 Dec 2021"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/textdark"
                android:textStyle="bold"
                android:text="Shop Name"/>

            <TextView
                android:layout_weight="0.02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textdark"
                android:textStyle="bold"
                android:text=":"/>

            <TextView
                android:layout_weight="0.6"
                android:id="@+id/shop_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textdark"
                tools:text="Tamil Arasan"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/textdark"
                android:textStyle="bold"
                android:text="Address"/>

            <TextView
                android:layout_weight="0.02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textdark"
                android:textStyle="bold"
                android:text=":"/>

            <TextView
                android:layout_weight="0.6"
                android:id="@+id/shop_address_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textdark"
                tools:text="24,sholapuran ,chennai - 623y2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/primary"
                android:src="@drawable/ic_my_location_black_24dp"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textdark"
                tools:text="Location"/>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/call"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/primary"
                android:src="@drawable/ic_baseline_phone_24"/>

            <TextView
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textdark"
                tools:text="Contact"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>