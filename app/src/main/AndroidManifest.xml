<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.greymatter.smartgold">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartGold"
        android:usesCleartextTraffic="true"
        tools:replace="android:theme">
        <activity
            android:name=".activity.CategoryDetailActivity"
            android:exported="true" />
        <activity android:name=".activity.CartActivity" />
        <activity
            android:name=".activity.CheckoutActivity"
            android:exported="true" />
        <activity android:name=".activity.ProductDetailActivity" />
        <activity android:name=".activity.SmartBuyActivity" />
        <activity android:name=".activity.OfferLockResultActivity" />
        <activity
            android:name=".activity.FilterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ShopListActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ShopOfferDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PaymentSuccessActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PaymentFailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddAddressActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddressActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SigninActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".activity.OtpActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/your_api_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>