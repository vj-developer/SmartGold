<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greymatter.smartgold">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartGold"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.SmartGoldLockedActivity"></activity>
        <activity
            android:name=".FilterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ReputedShopListActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SelectedShopOfferActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PaymentSuccessActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PaymentFailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddAddressActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddressActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SigninActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".activity.OtpActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/your_api_key" />
    </application>

</manifest>